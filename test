  <div class="container">
    <h2>üìÑ Xem d·ªØ li·ªáu b·∫£ng <span id="table-name">crdfd_employee</span></h2>
    <button onclick="loadData()">üì• Load Data</button>
    <div id="output"></div>
  </div>

  <script>
    // ‚öôÔ∏è C·∫•u h√¨nh b·∫£ng v√† web app endpoint
    const tableName = "crdfd_employee";
    const webAppId = "AKfycbz1fvA0SjryMl4_4K_Xf75gvaVQCuHzrJ7WJQsjg9GhOrnezEMDcjYyGBgF3QFr2xig";
    const url = `https://script.google.com/macros/s/${webAppId}/exec?sheet=${tableName}`;

    async function loadData() {
      const output = document.getElementById('output');
      output.innerHTML = '‚è≥ ƒêang t·∫£i d·ªØ li·ªáu...';

      try {
        const res = await fetch(url);
        if (!res.ok) throw new Error(`L·ªói: ${res.status}`);
        const json = await res.json();

        output.innerHTML = `<pre>${JSON.stringify(json, null, 2)}</pre>`;
      } catch (err) {
        output.innerHTML = `<div class="error">‚ùå ${err.message}</div>`;
      }
    }
  </script>
